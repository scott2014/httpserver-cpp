<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yhj.httpclient" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yhj.httpclient.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yhj.httpclient.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.yhj.httpclient.MsgActivity"
            android:label="@string/title_activity_msg" >
        </activity>
        <activity
            android:name="com.yhj.httpclient.AddMsgActivity"
            android:label="@string/title_activity_add_msg" >
        </activity>
        <activity
            android:name="com.yhj.httpclient.MsgDetailActivity"
            android:label="@string/title_activity_msg_detail" >
        </activity>
    </application>

</manifest>
